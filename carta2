        // Funci√≥n para aceptar la propuesta
        function aceptarPropuesta() {
            // Cambiar el contenido de la p√°gina cuando se hace clic en el bot√≥n "S√≠"
            const yesButton = document.getElementById('yesButton');
            yesButton.disabled = true; // Deshabilitar el bot√≥n "S√≠" despu√©s de hacer clic
            document.querySelector('h1').innerHTML = "¬°S√≠! ¬°Ya eres mi novia! ‚ù§Ô∏è";
            document.querySelector('.heart').innerHTML = "üòò Te amo";
        }

        // Funci√≥n para mover el bot√≥n "No" a una posici√≥n aleatoria
        function moverNo() {
            var noButton = document.getElementById("noButton");
            var randomX = Math.random() * (window.innerWidth - noButton.offsetWidth - 100); // Restamos un valor para que no se salga de la pantalla
            var randomY = Math.random() * (window.innerHeight - noButton.offsetHeight - 100); // Lo mismo para el eje Y

            noButton.style.transform = `translate(${randomX}px, ${randomY}px)`;
        }
    </script>
